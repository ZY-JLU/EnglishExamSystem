<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/widget_top_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/project_introduce"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/project_introduction"
        android:textSize="20dp"
        />


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="@string/add_my_qq"
    android:textSize="30dp"
    />

    <TextView
        android:id="@+id/tv_add_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_qq_text"
        android:textSize="20dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/project_address"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/tv_project_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/project_address_text"
        android:textSize="20dp"
        />

</LinearLayout>
